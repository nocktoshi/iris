{
  "manifest_version": 3,
  "name": "Fort Nock",
  "version": "0.0.1",
  "description": "Fort Nock - Chrome Wallet Extension for Nockchain",
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Fort Nock"
  },
  "background": {
    "service_worker": "background/index.ts",
    "type": "module"
  },
  "permissions": ["storage", "alarms", "scripting"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/index.ts"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["inpage/index.ts"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/nbx-crypto/*.wasm",
        "lib/nbx-crypto/*.js",
        "lib/nbx-nockchain-types/*.wasm",
        "lib/nbx-nockchain-types/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
